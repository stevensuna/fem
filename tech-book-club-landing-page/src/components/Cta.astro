---
// Import any needed assets
import avatarImg1 from '../assets/images/avatar-01.webp';
import avatarImg2 from '../assets/images/avatar-02.webp';
import avatarImg3 from '../assets/images/avatar-03.webp';
---

<section class="py-16 md:py-24 bg-[#062630] overflow-hidden">
  <div class="container mx-auto px-4 md:px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Heading -->
      <h2 class="font-['Martian_Mono'] font-semibold text-3xl md:text-4xl lg:text-5xl leading-[1.3] tracking-[-2px] text-white mb-8">
        Ready to debug your <span class="block">reading list?</span>
      </h2>

      <!-- CTA Button -->
      <div class="mb-10">
        <a href="#memberships" class="inline-flex items-center justify-center bg-[#FEA38F] text-white font-['Martian_Mono'] font-semibold py-4 px-8 rounded-xl text-center transition-all hover:bg-opacity-90">
          REVIEW MEMBERSHIP OPTIONS
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>

      <!-- Social Proof -->
      <div class="flex flex-col items-center">
        <div class="flex -space-x-3 mb-3">
          <img
            src={avatarImg1.src}
            alt=""
            class="w-10 h-10 rounded-full border-2 border-white"
            aria-hidden="true"
          />
          <img
            src={avatarImg2.src}
            alt=""
            class="w-10 h-10 rounded-full border-2 border-white"
            aria-hidden="true"
          />
          <img
            src={avatarImg3.src}
            alt=""
            class="w-10 h-10 rounded-full border-2 border-white"
            aria-hidden="true"
          />
          <span class="flex items-center justify-center w-10 h-10 rounded-full border-2 border-white bg-[#FEA38F] text-white text-xs font-bold">
            +
          </span>
        </div>
        <p class="font-['Inter'] text-[#E6E1DF]">
          <span class="font-semibold">200+</span> developers joined already
        </p>
      </div>
    </div>
  </div>
</section>