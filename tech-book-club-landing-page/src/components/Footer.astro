---
import Container from './ui/Container.astro';
import Typography from './ui/Typography.astro';
import FooterLink from './ui/FooterLink.astro';
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.svg';

const links = {
  resources: [
    { text: 'Book List', href: '#' },
    { text: 'Discussion Forum', href: '#' },
    { text: 'FAQ', href: '#' },
    { text: 'Blog', href: '#' },
  ],
  community: [
    { text: 'About Us', href: '#' },
    { text: 'Join Discord', href: '#' },
    { text: 'Twitter', href: '#' },
    { text: 'LinkedIn', href: '#' },
  ],
  legal: [
    { text: 'Privacy Policy', href: '#' },
    { text: 'Terms of Service', href: '#' },
    { text: 'Code of Conduct', href: '#' },
  ],
};
---

<footer class="bg-neutral-100 py-6 md:py-8 lg:py-10">
  <Container>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="space-y-4">
        <img src={logo.src} alt="Tech book club logo" class="h-8 w-auto" />
        <Typography variant="body" class="text-neutral-700 max-w-[35ch]">
          Building a community of tech professionals through shared learning experiences.
        </Typography>
      </div>

      <div class="space-y-4">
        <Typography variant="h3" as="h3">Resources</Typography>
        <ul class="space-y-2">
          {links.resources.map(link => (
            <li>
              <FooterLink href={link.href}>{link.text}</FooterLink>
            </li>
          ))}
        </ul>
      </div>

      <div class="space-y-4">
        <Typography variant="h3" as="h3">Community</Typography>
        <ul class="space-y-2">
          {links.community.map(link => (
            <li>
              <FooterLink href={link.href}>{link.text}</FooterLink>
            </li>
          ))}
        </ul>
      </div>

      <div class="space-y-4">
        <Typography variant="h3" as="h3">Legal</Typography>
        <ul class="space-y-2">
          {links.legal.map(link => (
            <li>
              <FooterLink href={link.href}>{link.text}</FooterLink>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-neutral-200">
      <Typography variant="caption" class="text-neutral-700 text-center">
        Â© {new Date().getFullYear()} Tech Book Club. All rights reserved.
      </Typography>
    </div>
  </Container>
</footer>
