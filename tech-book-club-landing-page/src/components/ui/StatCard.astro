---
import Typography from './Typography.astro';

interface Props {
  value: string;
  label: string;
  class?: string;
}

const { value, label, class: className } = Astro.props;
---

<div class:list={['text-center p-3 md:p-4 bg-salmon-50 rounded-lg', className]}>
  <Typography variant="h2" class="text-neutral-900">
    {value}
  </Typography>
  <Typography variant="caption" class="text-neutral-700 mt-1">
    {label}
  </Typography>
</div>