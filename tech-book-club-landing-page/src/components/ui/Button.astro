---
interface Props {
  text: string;
  style?: 'solid' | 'outline';
  iconRight?: string;
  href?: string;
  backgroundColor?: string;
  textColor?: string;
  borderColor?: string;
  borderRadius?: string;
  className?: string;
}

const {
  text,
  style = 'solid',
  iconRight,
  href = '#',
  backgroundColor = 'neutral-900',
  textColor = style === 'solid' ? 'neutral-0' : 'neutral-700',
  borderColor = style === 'solid' ? 'transparent' : 'neutral-700',
  borderRadius = 'full',
  className = '',
} = Astro.props;

// Map the styling values to Tailwind classes
const bgClass = style === 'solid' ? `bg-${backgroundColor}` : 'bg-transparent';
const textClass = `text-${textColor}`;
const borderClass = `border border-${borderColor}`;
const radiusClass = `rounded-${borderRadius}`;
---

<a
  href={href}
  class={`button inline-flex items-center justify-center px-400 py-200 font-martian text-preset-6 transition-all duration-200 hover:opacity-90 ${bgClass} ${textClass} ${borderClass} ${radiusClass} ${className}`}
>
  {text}
  {iconRight && <span class="ml-100">{iconRight}</span>}
</a>