---
import Button from './ui/Button.astro';
---

<section id="membership" class="membership py-600 md:py-800 px-400 md:px-600">
  <div class="container mx-auto">
    <h2 class="font-martian font-semibold text-[24px] md:text-[34px] leading-[130%] text-neutral-900 mb-600 text-center tracking-[-1px]">
      Membership options
    </h2>

    <div class="plans-container grid grid-cols-1 md:grid-cols-3 gap-300">
      <!-- Starter Plan -->
      <div class="plan-card p-400 border border-neutral-200 rounded-12 flex flex-col">
        <h3 class="font-inter font-semibold text-[20px] mb-150">Starter</h3>
        <div class="price-container mb-300 flex items-end">
          <span class="price font-martian text-[34px] font-semibold tracking-[-1px]">$19</span>
          <span class="period font-martian text-[16px] mb-100 ml-050">/month</span>
        </div>
        <ul class="features mb-400 space-y-200">
          <li class="flex items-center">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">1 book/month</span>
          </li>
          <li class="flex items-center">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">Online forums</span>
          </li>
        </ul>
        <div class="mt-auto">
          <Button
            text="SUBSCRIBE NOW"
            style="solid"
            backgroundColor="neutral-900"
            textColor="neutral-0"
            borderRadius="radius-8"
            className="w-full justify-center"
          />
        </div>
      </div>

      <!-- Pro Plan -->
      <div class="plan-card p-400 border border-neutral-200 rounded-12 flex flex-col">
        <h3 class="font-inter font-semibold text-[20px] mb-150">Pro</h3>
        <div class="price-container mb-300 flex items-end">
          <span class="price font-martian text-[34px] font-semibold tracking-[-1px]">$29</span>
          <span class="period font-martian text-[16px] mb-100 ml-050">/month</span>
        </div>
        <ul class="features mb-400 space-y-200">
          <li class="flex items-center">
            <img src="/assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">2 books/month</span>
          </li>
          <li class="flex items-center">
            <img src="/assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">Virtual meetups</span>
          </li>
        </ul>
        <div class="mt-auto">
          <Button
            text="SUBSCRIBE NOW"
            style="solid"
            backgroundColor="neutral-900"
            textColor="neutral-0"
            borderRadius="radius-8"
            className="w-full justify-center"
          />
        </div>
      </div>

      <!-- Enterprise Plan -->
      <div class="plan-card p-400 border border-neutral-200 rounded-12 flex flex-col">
        <h3 class="font-inter font-semibold text-[20px] mb-150">Enterprise</h3>
        <div class="price-container mb-300">
          <span class="price font-martian text-[34px] font-semibold tracking-[-1px]">Custom</span>
        </div>
        <ul class="features mb-400 space-y-200">
          <li class="flex items-center">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">Team access</span>
          </li>
          <li class="flex items-center">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[20px] h-[20px] mr-150" />
            <span class="text-neutral-700 font-martian text-[14px]">Private sessions</span>
          </li>
        </ul>
        <div class="mt-auto">
          <Button
            text="TALK TO US"
            style="outline"
            borderColor="neutral-700"
            textColor="neutral-700"
            borderRadius="radius-8"
            className="w-full justify-center"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .membership {
    background-color: #ffffff;
  }

  .price {
    line-height: 130%;
  }

  .period, .features span {
    letter-spacing: -1px;
    line-height: 120%;
  }
</style>