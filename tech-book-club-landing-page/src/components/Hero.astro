---
// Import images and assets
import iconArrowDown from '../assets/images/icon-arrow-down.svg';
import iconStar from '../assets/images/icon-star.svg';
import avatars from '../assets/images/image-avatars.webp';
import heroDesktop from '../assets/images/image-hero-desktop.webp';
import heroMobile from '../assets/images/image-hero-mobile.webp';
import heroTablet from '../assets/images/image-hero-tablet.webp';
import logo from '../assets/images/logo.svg';
import patternLightBg from '../assets/images/pattern-light-bg.svg';
---

<section class="relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 z-0">
    <img
      src={patternLightBg.src}
      alt=""
      class="w-full h-full object-cover"
      aria-hidden="true"
    />
  </div>

  <div class="container mx-auto px-4 md:px-6 py-8 md:py-16 relative z-10">
    <!-- Navigation/Logo -->
    <header class="mb-8 md:mb-12">
      <a href="/" class="inline-block" aria-label="Tech Book Club">
        <img src={logo.src} alt="Tech Book Club" class="h-8 md:h-10" width="180" height="40" />
      </a>
    </header>

    <!-- Hero Content -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 md:gap-12 lg:gap-16">
      <!-- Text Content -->
      <div class="max-w-xl">
        <h1 class="font-['Martian_Mono'] font-bold text-4xl md:text-5xl lg:text-6xl leading-[1.2] tracking-[-2px] text-[#062630] mb-4 md:mb-6">
          Join the <span class="block">ultimate tech</span> <span class="block">book club</span>
        </h1>

        <p class="font-['Inter'] text-lg md:text-xl leading-[1.4] tracking-[-0.5px] text-[#385159] mb-8">
          Turn your reading time into learning time with fellow tech enthusiasts.
        </p>

        <!-- CTA Button -->
        <a
          href="#membership-options"
          class="inline-flex items-center gap-2 px-6 py-3 md:px-8 md:py-4 bg-[#062630] text-white rounded-[10px] font-['Martian_Mono'] font-semibold text-base md:text-lg transition-all hover:bg-[#385159] mb-8"
        >
          REVIEW MEMBERSHIP OPTIONS
          <img src={iconArrowDown.src} alt="" width="16" height="16" aria-hidden="true" />
        </a>

        <!-- Social Proof -->
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3">
          <div class="flex items-center gap-2">
            <img
              src={avatars.src}
              alt="Member avatars"
              class="h-8 w-auto"
              width="96"
              height="32"
            />
            <div class="flex">
              {Array(5).fill(0).map(() => (
                <img src={iconStar.src} alt="" width="16" height="16" aria-hidden="true" class="w-4 h-4" />
              ))}
            </div>
          </div>
          <p class="font-['Inter'] text-sm md:text-base text-[#385159]">
            <strong>200+</strong> developers joined already
          </p>
        </div>
      </div>

      <!-- Hero Image - Responsive -->
      <div class="relative w-full max-w-md mx-auto lg:max-w-xl lg:mx-0">
        <picture>
          <source media="(min-width: 1024px)" srcset={heroDesktop.src} />
          <source media="(min-width: 768px)" srcset={heroTablet.src} />
          <img
            src={heroMobile.src}
            alt="Tech enthusiasts reading and discussing books"
            class="w-full h-auto rounded-[20px] shadow-lg"
            width="600"
            height="400"
          />
        </picture>
      </div>
    </div>
  </div>
</section>