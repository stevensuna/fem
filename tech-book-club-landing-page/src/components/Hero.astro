---
import { Image } from 'astro:assets';
import Container from './ui/Container.astro';
import Button from './ui/Button.astro';
import Rating from './ui/Rating.astro';

import iconArrowDown from '../assets/images/icon-arrow-down.svg';
import actualAvatars from '../assets/images/image-avatars.webp';
import heroDesktop from '../assets/images/image-hero-desktop.webp';
import heroMobile from '../assets/images/image-hero-mobile.webp';
import heroTablet from '../assets/images/image-hero-tablet.webp';
import logo from '../assets/images/logo.svg';
---

<section class="bg-pattern bg-neutral-100 overflow-x-hidden">
  <Container>
    <div class="py-3 md:py-4 lg:py-6">
      <img src={logo.src} alt="Tech book club logo" class="h-auto w-auto" />
    </div>

    <div class="flex flex-col gap-6 md:gap-8 pb-4 md:pb-8 lg:pb-10 md:grid md:grid-cols-2 md:items-center">
      <div class="space-y-3 md:space-y-4 lg:space-y-6 md:order-1">
        <h1 class="font-mono font-bold text-heading-1 md:text-heading-1-lg max-w-[15ch]">
          <span class="inline-block gradient-text">Join the ultimate tech book club</span>
        </h1>
        
        <p class="font-sans text-body md:text-body-lg text-neutral-700 max-w-[45ch]">
          Turn your reading time into learning time with fellow tech enthusiasts. Get curated recommendations, join vibrant discussions, and level up your skills one chapter at a time.
        </p>
        
        <div class="flex flex-col md:flex-row items-start md:items-center gap-2 md:gap-4">
          <Button href="#membership" size="lg">
            <span>REVIEW MEMBERSHIP OPTIONS</span>
            <Image src={iconArrowDown} alt="" width={16} height={16} class="w-5 h-5 ml-2" />
          </Button>
        </div>

        <div class="flex items-center gap-2 md:gap-3 pt-2 md:pt-3">
          <div class="flex -space-x-2">
            <Image 
              src={actualAvatars} 
              alt="Member avatars" 
              width={110} 
              height={40} 
              class="w-[80px] md:w-[90px] lg:w-[110px] h-auto" 
            />
          </div>
          <div class="flex flex-col gap-micro-2 md:gap-micro-3">
            <Rating class="text-salmon-500" />
            <span class="font-mono text-caption md:text-body-sm text-neutral-700">
              200+ developers joined already
            </span>
          </div>
        </div>
      </div>

      <div class="md:order-2 mb-3 md:mb-0">
        <Image
          src={heroMobile}
          alt="Group of people discussing around a table"
          width={343}
          height={257}
          class="rounded-md md:rounded-lg w-full h-auto object-cover md:hidden"
        />
        <Image
          src={heroTablet}
          alt="Group of people discussing around a table"
          width={339}
          height={381}
          class="rounded-md md:rounded-lg w-full h-auto object-cover hidden md:block lg:hidden"
        />
        <Image
          src={heroDesktop}
          alt="Group of people discussing around a table"
          width={540}
          height={606}
          class="rounded-md md:rounded-lg w-full h-auto object-cover hidden lg:block"
        />
      </div>
    </div>
  </Container>
</section>
