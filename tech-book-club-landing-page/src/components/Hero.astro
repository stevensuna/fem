---
// Hero component for Tech Book Club
import { Image } from 'astro:assets';
import starIcon from '../assets/images/icon-star.svg';
import avatarsImage from '../assets/images/image-avatars.webp';
import heroDesktopImage from '../assets/images/image-hero-desktop.webp';
import heroMobileImage from '../assets/images/image-hero-mobile.webp';
import heroTabletImage from '../assets/images/image-hero-tablet.webp';
---

<section class="bg-neutral-0 py-600 md:py-800 lg:py-1000">
  <div class="container mx-auto px-300">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-400 md:gap-500 items-center">
      <!-- Text Section -->
      <div class="flex flex-col space-y-400">
        <h1 class="font-mono text-preset-1-mobile md:text-preset-2 lg:text-preset-1 bg-text-gradient text-transparent">
          Join the ultimate tech book club
        </h1>

        <p class="font-sans text-preset-5 text-neutral-700">
          Turn your reading time into learning time. Connect with fellow tech enthusiasts. Get curated recommendations, join vibrant discussions, and level up your skills one chapter at a time.
        </p>

        <div>
          <button class="rounded-full border border-neutral-700 text-neutral-700 px-300 py-150 font-mono font-semibold text-preset-6 inline-flex items-center hover:bg-neutral-700 hover:text-neutral-0 transition-colors duration-300">
            REVIEW MEMBERSHIP OPTIONS
            <span class="ml-100">+</span>
          </button>
        </div>

        <div class="flex items-center space-x-100">
          <!-- Avatar column -->
          <div class="flex items-center">
            <Image
              src={avatarsImage}
              alt="Avatars of members"
              class="h-[32px] w-auto"
              width={120}
              height={32}
            />
          </div>

          <!-- Stars and member count column -->
          <div class="flex flex-col space-y-100">
            <div class="flex space-x-025">
              <Image
                src={starIcon}
                alt=""
                width={20}
                height={20}
                class="w-[20px] h-[20px]"
              />
              <Image
                src={starIcon}
                alt=""
                width={20}
                height={20}
                class="w-[20px] h-[20px]"
              />
              <Image
                src={starIcon}
                alt=""
                width={20}
                height={20}
                class="w-[20px] h-[20px]"
              />
              <Image
                src={starIcon}
                alt=""
                width={20}
                height={20}
                class="w-[20px] h-[20px]"
              />
              <Image
                src={starIcon}
                alt=""
                width={20}
                height={20}
                class="w-[20px] h-[20px]"
              />
            </div>
            <span class="font-mono text-preset-7 text-neutral-700">
              200+ developers joined already
            </span>
          </div>
        </div>
      </div>

      <!-- Image Section -->
      <div class="relative">
        <picture>
          <source
            media="(min-width: 1024px)"
            srcset={heroDesktopImage.src}
          />
          <source
            media="(min-width: 768px)"
            srcset={heroTabletImage.src}
          />
          <Image
            src={heroMobileImage}
            alt="Group of people discussing around a table with books"
            class="w-full h-auto rounded-16"
            width={heroMobileImage.width}
            height={heroMobileImage.height}
          />
        </picture>
      </div>
    </div>
  </div>
</section>