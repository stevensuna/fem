---
import Container from './ui/Container.astro';
import Typography from './ui/Typography.astro';
import Grid from './ui/Grid.astro';
import TestimonialCard from './ui/TestimonialCard.astro';

// Using a single avatar image since the individual ones are not available
import avatarImage from '../assets/images/image-avatars.webp';

const testimonials = [
  {
    name: "Sarah Chen",
    role: "Senior Software Engineer",
    avatar: avatarImage,
    quote: "The book discussions have helped me understand complex architectural patterns that I now use daily in my work.",
    stars: 5
  },
  {
    name: "Marcus Johnson",
    role: "Tech Lead",
    avatar: avatarImage,
    quote: "Being part of this community has accelerated my learning and career growth significantly.",
    stars: 5
  },
  {
    name: "Lisa Rodriguez",
    role: "Frontend Developer",
    avatar: avatarImage,
    quote: "The diverse perspectives in our discussions bring the books to life in ways I never expected.",
    stars: 5
  }
];
---

<section class="py-6 md:py-8 lg:py-10 bg-neutral-100">
  <Container>
    <div class="text-center max-w-[45ch] mx-auto mb-6 md:mb-8">
      <Typography variant="h2" as="h2" gradient>
        What Our Members Say
      </Typography>
      <Typography variant="body-lg" class="mt-2 md:mt-3 text-neutral-700">
        Join hundreds of developers who are already learning together
      </Typography>
    </div>

    <Grid cols={{ mobile: 1, tablet: 2, desktop: 3 }} gap="4">
      {testimonials.map(testimonial => (
        <TestimonialCard {...testimonial} />
      ))}
    </Grid>
  </Container>
</section>
