---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';

// Import images
import iconArrowDown from '../../assets/images/icon-arrow-down.svg';
import actualAvatars from '../../assets/images/image-avatars.webp';
import heroDesktop from '../../assets/images/image-hero-desktop.webp';
import heroMobile from '../../assets/images/image-hero-mobile.webp';
import heroTablet from '../../assets/images/image-hero-tablet.webp';
import logo from '../../assets/images/logo.svg';
---

<section class="bg-neutral-100 overflow-x-hidden pt-6 pb-10 md:pt-8 md:pb-16 lg:pt-10 lg:pb-20 bg-pattern">
  <div class="container-base">
    <div class="mb-6 md:mb-8">
      <img src={logo.src} alt="Tech book club logo" class="h-auto w-auto" />
    </div>

    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8 md:gap-12">
      <div class="space-y-4 md:space-y-6 md:w-1/2">
        <h1 class="font-mono font-bold text-heading-1 md:text-heading-1-lg max-w-md">
          <span class="gradient-text">Join the ultimate tech book club</span>
        </h1>

        <p class="text-neutral-700 text-body-sm md:text-body max-w-md">
          Turn your reading time into learning time with fellow tech enthusiasts. Get curated recommendations, join vibrant discussions, and level up your skills one chapter at a time.
        </p>

        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
          <Button variant="primary" size="lg" href="#membership">
            Become a member
          </Button>

          <a href="#features" class="flex items-center text-neutral-700 hover:text-neutral-900 transition-colors">
            <span class="mr-2">Explore benefits</span>
            <img src={iconArrowDown.src} alt="" class="w-4 h-4" />
          </a>
        </div>

        <div class="flex items-center mt-6">
          <div class="flex -space-x-2">
            <img src={actualAvatars.src} alt="Community members" class="h-12 w-auto" />
          </div>
          <div class="ml-4">
            <div class="flex items-center">
              <div class="flex">
                {[...Array(5)].map(() => (
                  <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <p class="ml-2 text-caption font-medium text-neutral-700">500+ happy members</p>
            </div>
          </div>
        </div>
      </div>

      <div class="md:w-1/2">
        <picture class="block relative">
          <source media="(min-width: 1024px)" srcset={heroDesktop.src}>
          <source media="(min-width: 768px)" srcset={heroTablet.src}>
          <img
            src={heroMobile.src}
            alt="Tech books and reading community"
            class="rounded-xl shadow-lg w-full h-auto"
          />
        </picture>
      </div>
    </div>
  </div>
</section>
