---
// src/components/Features.astro
import { Image } from 'astro:assets';
import readTogetherImage from '../assets/images/image-read-together-desktop.webp';
import checkIcon from '../assets/images/icon-check.svg';
---
<section class="py-800 px-400 md:px-800">
  <div class="container mx-auto grid md:grid-cols-2 gap-600 items-center">
    {/* Image (Order reversed on mobile, handled by grid) */}
    <div class="order-2 md:order-1">
       <Image src={readTogetherImage} alt="People reading books together" width={600} height={400} class="rounded-12 w-full h-auto object-cover" />
    </div>

    {/* Text Content */}
    <div class="order-1 md:order-2 space-y-400">
      {/* Text Preset 2: Martian Mono, Semibold, 50px/34px, 130% line height, -2px tracking */}
      <h2 class="font-mono font-semibold text-preset-2-mobile md:text-preset-2 text-neutral-900">
        Read together, grow together
      </h2>
      <ul class="space-y-200">
        {/* Updated list items: Boxed check icon, Inter font, updated text */}
        <li class="flex items-start space-x-150">
          <Image src={checkIcon} alt="" width={20} height={20} class="w-200 h-200 mt-050 flex-shrink-0 text-light-salmon-500" />
          <span class="font-sans text-base text-neutral-700 leading-[1.4] tracking-[-0.5px]">Monthly curated tech reads selected by industry experts</span>
        </li>
        <li class="flex items-start space-x-150">
          <Image src={checkIcon} alt="" width={20} height={20} class="w-200 h-200 mt-050 flex-shrink-0 text-light-salmon-500" />
          <span class="font-sans text-base text-neutral-700 leading-[1.4] tracking-[-0.5px]">Virtual and in-person meetups for deep-dive discussions</span>
        </li>
        <li class="flex items-start space-x-150">
          <Image src={checkIcon} alt="" width={20} height={20} class="w-200 h-200 mt-050 flex-shrink-0 text-light-salmon-500" />
          <span class="font-sans text-base text-neutral-700 leading-[1.4] tracking-[-0.5px]">Early access to new tech book releases</span>
        </li>
        <li class="flex items-start space-x-150">
          <Image src={checkIcon} alt="" width={20} height={20} class="w-200 h-200 mt-050 flex-shrink-0 text-light-salmon-500" />
          <span class="font-sans text-base text-neutral-700 leading-[1.4] tracking-[-0.5px]">Author Q&A sessions with tech thought leaders</span>
        </li>
      </ul>
    </div>
  </div>
</section>
