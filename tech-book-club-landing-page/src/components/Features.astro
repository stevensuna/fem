---
import Container from './ui/Container.astro';
import Typography from './ui/Typography.astro';
import Card from './ui/Card.astro';
import Grid from './ui/Grid.astro';

const features = [
  {
    title: 'Curated Book Selection',
    description: 'Every month, we carefully select tech books that matter, from cutting-edge programming to timeless software principles.'
  },
  {
    title: 'Live Discussions',
    description: 'Join live virtual meetups where we break down complex concepts and share real-world applications.'
  },
  {
    title: 'Expert Insights',
    description: 'Get exclusive access to author Q&As and industry expert discussions that deepen your understanding.'
  }
];
---

<section class="py-6 md:py-8 lg:py-10 bg-neutral-100">
  <Container>
    <div class="text-center max-w-[45ch] mx-auto mb-6 md:mb-8">
      <Typography variant="h2" as="h2" gradient>
        Why Join Our Tech Book Club?
      </Typography>
      <Typography variant="body-lg" class="mt-2 md:mt-3 text-neutral-700">
        Level up your tech career with our community-driven learning experience
      </Typography>
    </div>

    <Grid cols={{ mobile: 1, tablet: 2, desktop: 3 }} gap="4">
      {features.map(feature => (
        <Card variant="secondary" class="flex flex-col gap-2 md:gap-3">
          <Typography variant="h3" as="h3">
            {feature.title}
          </Typography>
          <Typography variant="body" class="text-neutral-700">
            {feature.description}
          </Typography>
        </Card>
      ))}
    </Grid>
  </Container>
</section>
