---
// src/components/CallToAction.astro
import { Image } from 'astro:assets';
import iconArrowUp from '../assets/images/icon-arrow-up.svg';
import starIcon from '../assets/images/icon-star.svg';
import avatarGroup from '../assets/images/image-avatars.webp';
---
<section class="py-1000 px-400 md:px-800 bg-neutral-900 text-neutral-0">
  <div class="container mx-auto text-center">
    <h2 class="font-mono font-semibold text-preset-2-mobile md:text-preset-2 mb-400">
      Ready to debug your reading list?
    </h2>
    <div class="flex justify-center mb-300">
      <a href="#membership" class="inline-flex items-center gap-100 bg-neutral-900 text-neutral-0 border border-neutral-700 px-300 py-150 rounded-8 font-mono font-semibold text-preset-6 hover:bg-neutral-700 transition-colors">
        <span>REVIEW MEMBERSHIP OPTIONS</span>
        <Image src={iconArrowUp} alt="" width={16} height={16} />
      </a>
    </div>
    <div class="flex items-center justify-center space-x-150">
      <div class="w-[110px] h-[40px]">
        <Image src={avatarGroup} alt="Member avatars" width={110} height={40} class="w-full h-full object-cover" />
      </div>
      <div class="flex text-light-salmon-500">
        <Image src={starIcon} alt="" width={20} height={20} class="w-200 h-200" />
        <Image src={starIcon} alt="" width={20} height={20} class="w-200 h-200" />
        <Image src={starIcon} alt="" width={20} height={20} class="w-200 h-200" />
        <Image src={starIcon} alt="" width={20} height={20} class="w-200 h-200" />
        <Image src={starIcon} alt="" width={20} height={20} class="w-200 h-200" />
      </div>
      <span class="font-mono text-preset-7 text-neutral-200">200+ developers joined already</span>
    </div>
  </div>
</section>
