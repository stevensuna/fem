// Read Together section component
---

<section id="features" class="read-together bg-neutral-0 py-600 md:py-800 px-400 md:px-600">
  <div class="container mx-auto">
    <div class="flex flex-col-reverse md:flex-row items-center gap-600">
      <div class="image-content flex-1">
        <picture>
          <source media="(min-width: 1024px)" srcset="../assets/images/image-read-together-desktop.webp">
          <source media="(min-width: 768px)" srcset="../assets/images/image-read-together-tablet.webp">
          <img
            src="../assets/images/image-read-together-mobile.webp"
            alt="People reading books together in a cozy setting"
            class="w-full h-auto rounded-24 shadow-lg object-cover"
          />
        </picture>
      </div>
      <div class="text-content flex-1 max-w-[600px]">
        <h2 class="font-martian font-semibold text-[34px] md:text-[50px] leading-[130%] text-neutral-900 mb-400 tracking-[-2px]">
          Read together, grow together
        </h2>
        <ul class="features-list space-y-150">
          <li class="flex items-start">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[24px] h-[24px] mt-100 mr-200" />
            <p class="text-neutral-700 font-inter text-[20px] leading-[140%] tracking-[-0.5px]">
              Monthly curated tech reads selected by industry experts
            </p>
          </li>
          <li class="flex items-start">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[24px] h-[24px] mt-100 mr-200" />
            <p class="text-neutral-700 font-inter text-[20px] leading-[140%] tracking-[-0.5px]">
              Virtual and in-person meetups for deep-dive discussions
            </p>
          </li>
          <li class="flex items-start">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[24px] h-[24px] mt-100 mr-200" />
            <p class="text-neutral-700 font-inter text-[20px] leading-[140%] tracking-[-0.5px]">
              Early access to new tech book releases
            </p>
          </li>
          <li class="flex items-start">
            <img src="../assets/images/icon-check.svg" alt="" class="w-[24px] h-[24px] mt-100 mr-200" />
            <p class="text-neutral-700 font-inter text-[20px] leading-[140%] tracking-[-0.5px]">
              Author Q&A sessions with tech thought leaders
            </p>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>