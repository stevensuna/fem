---
import Container from './ui/Container.astro';
import Typography from './ui/Typography.astro';
import Grid from './ui/Grid.astro';
import PricingCard from './ui/PricingCard.astro';

const plans = [
  {
    name: "Basic",
    price: "$9",
    description: "Perfect for getting started with tech book discussions",
    features: [
      { text: "Access to monthly book selections", included: true },
      { text: "Community forum access", included: true },
      { text: "Monthly virtual meetups", included: true },
      { text: "Expert Q&A sessions", included: false },
      { text: "Workshop recordings", included: false },
      { text: "1-on-1 mentoring", included: false },
    ]
  },
  {
    name: "Pro",
    price: "$19",
    description: "Most popular choice for serious tech professionals",
    features: [
      { text: "Access to monthly book selections", included: true },
      { text: "Community forum access", included: true },
      { text: "Monthly virtual meetups", included: true },
      { text: "Expert Q&A sessions", included: true },
      { text: "Workshop recordings", included: true },
      { text: "1-on-1 mentoring", included: false },
    ],
    isPopular: true
  },
  {
    name: "Enterprise",
    price: "$39",
    description: "Complete package for teams and tech leaders",
    features: [
      { text: "Access to monthly book selections", included: true },
      { text: "Community forum access", included: true },
      { text: "Monthly virtual meetups", included: true },
      { text: "Expert Q&A sessions", included: true },
      { text: "Workshop recordings", included: true },
      { text: "1-on-1 mentoring", included: true },
    ]
  }
];
---

<section class="py-6 md:py-8 lg:py-10" id="membership">
  <Container>
    <div class="text-center max-w-[45ch] mx-auto mb-6 md:mb-8">
      <Typography variant="h2" as="h2" gradient>
        Choose Your Membership
      </Typography>
      <Typography variant="body-lg" class="mt-2 md:mt-3 text-neutral-700">
        Select the plan that best fits your learning goals
      </Typography>
    </div>

    <Grid cols={{ mobile: 1, tablet: 1, desktop: 3 }} gap="4">
      {plans.map(plan => (
        <PricingCard {...plan} />
      ))}
    </Grid>
  </Container>
</section>
