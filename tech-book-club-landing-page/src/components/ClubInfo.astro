---
import { Image } from 'astro:assets';
import Container from './ui/Container.astro';
import Typography from './ui/Typography.astro';
import Grid from './ui/Grid.astro';
import StatCard from './ui/StatCard.astro';

const stats = [
  { value: '12+', label: 'Books per Year' },
  { value: '24', label: 'Live Sessions' },
  { value: '200+', label: 'Active Members' }
];
---

<section class="py-6 md:py-8 lg:py-10">
  <Container>
    <div class="md:grid md:grid-cols-2 md:gap-8 lg:gap-12 items-center">
      <div class="space-y-4 md:space-y-6 mb-6 md:mb-0">
        <Typography variant="h2" as="h2" gradient>
          A Community of Tech Enthusiasts
        </Typography>
        
        <Typography variant="body-lg" class="text-neutral-700">
          Join a vibrant community of developers, engineers, and tech professionals who are passionate about learning and growing together.
        </Typography>

        <Grid cols={{ mobile: 3, tablet: 3, desktop: 3 }} gap="3">
          {stats.map(stat => (
            <StatCard 
              value={stat.value}
              label={stat.label}
            />
          ))}
        </Grid>
      </div>

      <div class="relative">
        <div class="absolute inset-0 -z-10 bg-pattern-glow opacity-40"></div>
        <Image
          src="/src/assets/images/community-image.webp"
          alt="Tech book club community members"
          width={540}
          height={405}
          class="w-full rounded-lg shadow-lg"
        />
      </div>
    </div>
  </Container>
</section>
