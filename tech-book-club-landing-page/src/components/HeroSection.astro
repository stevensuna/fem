---
import avatarsImg from '../assets/images/image-avatars.webp';
import heroDesktopImg from '../assets/images/image-hero-desktop.webp';
import heroMobileImg from '../assets/images/image-hero-mobile.webp';
import heroTabletImg from '../assets/images/image-hero-tablet.webp';
import Button from './ui/Button.astro';
import SocialProof from './ui/SocialProof.astro';
---

<section class="hero bg-neutral-0 py-600 md:py-800 px-400 md:px-600">
  <div class="container mx-auto">
    <div class="flex flex-col md:flex-row items-center gap-600">
      <div class="text-content flex-1 max-w-[600px]">
        <h1 class="bg-text-gradient bg-clip-text text-transparent font-martian text-preset-1-mobile md:text-preset-1 mb-300">
          Join the ultimate tech book club
        </h1>
        <p class="text-neutral-700 font-inter text-preset-5 mb-400">
          Turn your reading time into learning time. Connect with fellow tech enthusiasts. Get curated recommendations, join vibrant discussions, and level up your skills one chapter at a time.
        </p>

        <Button
          text="REVIEW MEMBERSHIP OPTIONS"
          style="outline"
          iconRight="+"
          borderColor="neutral-700"
          textColor="neutral-700"
          borderRadius="full"
          className="mb-400"
        />

        <SocialProof
          avatarsSrc={avatarsImg.src}
          content="200+ developers joined already"
          textColor="neutral-700"
        />
      </div>
      <div class="image-content flex-1">
        <picture>
          <source media="(min-width: 1024px)" srcset={heroDesktopImg.src}>
          <source media="(min-width: 768px)" srcset={heroTabletImg.src}>
          <img
            src={heroMobileImg.src}
            alt="Group of people discussing around a table with books"
            class="w-full h-auto rounded-24 shadow-lg object-cover"
            loading="eager"
          />
        </picture>
      </div>
    </div>
  </div>
</section>