---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Tech Book Club - Join the Ultimate Tech Book Community",
  description = "Turn your reading time into learning time. Connect with fellow tech enthusiasts through curated recommendations, vibrant discussions, and exclusive meetups."
} = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Martian+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', sans-serif;
	}
</style>
