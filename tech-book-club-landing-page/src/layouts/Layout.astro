---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A tech book club landing page" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Font Imports -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Martian+Mono:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-neutral-0 text-neutral-700 antialiased"> {/* Set base background and text color, add antialiasing */}
    <slot />
  </body>
</html>
